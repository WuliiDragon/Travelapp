<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameLayoutId"
        android:layout_weight="1"
        >
    </FrameLayout>

    <LinearLayout
        android:id="@+id/daohang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#f9f9f9"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/headerTouch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/header_Image"
                    android:src="@drawable/unheader"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />

                <TextView
                    android:id="@+id/header_text"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_marginTop="2dp"
                    android:text="首页"
                    android:textColor="@color/theGray"

                    android:textSize="8sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/jinianThouch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/jinian_Image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/unjinian" />

                <TextView
                    android:id="@+id/jinian_text"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_marginTop="2dp"
                    android:text="纪念品"
                    android:textColor="@color/theGray"
                    android:textSize="9sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/collectTouch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/collect_Image"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:src="@drawable/uncollect" />

                <TextView
                    android:id="@+id/collect_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="我的收藏"
                    android:textColor="@color/theGray"

                    android:textSize="8sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tickesThouch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tickes_Image"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/untickes" />

                <TextView
                    android:id="@+id/tickes_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="我的购票"
                    android:textColor="@color/theGray"
                    android:textSize="8sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mycenterThouch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mycenter_Image"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/unmy" />

                <TextView
                    android:id="@+id/mycenter_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="个人中心"
                    android:textColor="@color/theGray"
                    android:textSize="8sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>