<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/user_center_leftback"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:gravity="center"
            android:text="个人资料"
            android:id="@+id/user_center_title"
            android:layout_width="100dp"
            android:layout_height="50dp" />
    </LinearLayout>
    <LinearLayout

        android:id="@+id/user_center_image"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="头像"
            android:layout_width="250dp"
            android:layout_height="50dp" />
        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <ImageView
            android:background="@drawable/youfanhui"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/user_center_name"
        android:layout_width="match_parent"
    android:layout_height="50dp">
    <TextView
        android:text="昵称"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <TextView
        android:gravity="right"
        android:text="xiaohei"
        android:layout_width="250dp"
        android:layout_height="50dp" />
    <ImageView
        android:background="@drawable/youfanhui"
        android:layout_width="50dp"
        android:layout_height="50dp" />
</LinearLayout>
    <LinearLayout
        android:id="@+id/user_center_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="手机"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:text="12138"
            android:layout_width="250dp"
            android:layout_height="50dp" />
        <ImageView
            android:background="@drawable/youfanhui"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/user_center_sex"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="性别"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:text="men"
            android:layout_width="250dp"
            android:layout_height="50dp" />
        <ImageView
            android:background="@drawable/youfanhui"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>
    <Button
        android:text="修改"
        android:id="@+id/user_center_commit"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</LinearLayout>