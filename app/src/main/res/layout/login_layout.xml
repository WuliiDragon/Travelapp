<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginback">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="45dp"
            android:src="@drawable/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#fcfcfc"
            />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="56dp"
        android:background="@drawable/layoutedittext_coner"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >
        <ImageView
            android:background="@drawable/user"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />


        <EditText
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/Number"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@null"
            android:textColor="@color/theGray"
            android:hint="请输入您的手机号"
            android:text="13689113231"/>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/layoutedittext_coner"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >
        <ImageView
            android:background="@drawable/pass"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />


        <EditText
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/Password"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@null"
            android:textColor="@color/theGray"
            android:inputType="textPassword"
            android:hint="请输入您的密码"
            android:text="123456"/>

    </LinearLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <Button
            android:id="@+id/turn_to_register"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_alignBaseline="@+id/login_btn"
            android:layout_alignBottom="@+id/login_btn"
            android:layout_toEndOf="@+id/login_btn"
            android:layout_toRightOf="@+id/login_btn"
            android:background="@drawable/registbutton_conner"
            android:text="注 册"
            android:textColor="#7f8181"
            android:textSize="15dp" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="66dp"
            android:background="@drawable/loginbutton_conner"
            android:text="登 录"
            android:textColor="#f8f9fa"
            android:textSize="18dp"
            android:textStyle="normal" />

    </RelativeLayout>
    <!--<TextView-->
        <!--android:id="@+id/ChangePassword"-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:text="忘记密码"/>-->

</LinearLayout>