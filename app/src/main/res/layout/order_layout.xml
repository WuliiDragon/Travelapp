    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:id="@+id/relativeLayout5">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/order_pay"
            android:layout_alignBottom="@+id/order_pay"
            android:layout_centerHorizontal="true"
            android:gravity="right"
            android:text="总价: ¥"
            android:textColor="#fe44"
            android:textSize="16dp" />

        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/order_totalprice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/order_pay"
            android:layout_alignBottom="@+id/order_pay"
            android:layout_toLeftOf="@+id/order_pay"
            android:layout_toStartOf="@+id/order_pay"
            android:gravity="center"
            android:text="23"
            android:textColor="#fe44"
            android:textSize="16dp" />

        <Button
            android:id="@+id/order_pay"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#fe44"
            android:text="支 付"
            android:textColor="#fbfbfa"
            android:textSize="22dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
