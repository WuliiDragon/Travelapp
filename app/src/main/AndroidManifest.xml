<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wlxy.com.travelapp">

    <application
        android:name=".utils.AppController"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity
            android:name=".main.HomeActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.UserCenterActivity"
            android:launchMode="singleTop"></activity>
        <activity android:name=".main.LoginActivity"></activity>
        <activity
            android:name=".main.RegisterActivity"
            android:launchMode="singleTop"></activity>
        <activity
            android:name=".main.MerChantDetailActivity"
            android:launchMode="singleTask"></activity>
        <activity android:name=".main.OrderActivity"></activity>
        <activity android:name=".main.OrderResActivity"></activity>
        <activity android:name=".main.MineOrderActivity"></activity>
        <activity android:name=".main.MineOrderInfoActivity"></activity>


    </application>


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>